@{
    Layout = "~/Views/Shared/_CusLayout.cshtml";
}
@model Library.Models.User


<div>

    <div>

        <h4 style="color:black">Your Profile</h4>
    </div>

    <a href="~/Customer/ProfilePicture">Upload Profile picture</a>
  
    <div class="row">
        <div class="col-md-6">
            <table  class="table table-striped table-hover table table-striped table w-auto .table-fixed">
                <tr class="table-success">

                    <td>
                        Username
                    </td>

                    <td>
                        @Model.Username
                    </td>
                <tr class="table-info">

                
                    <td>Name</td>
                    <td>
                        @Model.Name

                    </td>

                </tr>


                <tr class="table-success">
                    <td>Email</td>
                    <td>
                        @Model.Email)

                    </td>

                </tr>


                <tr class="table-info">
                    <td>Phone</td>
                    <td>
                        @Model.Phone
                    </td>

            </table>
        </div>
        <div class="col-md-4">
            @if (Model.Images.FirstOrDefault() != null)
            {
                <img src="data:image;base64,@System.Convert.ToBase64String(Model.Images.FirstOrDefault().ImageData)" alt="Alternate Text" />
            }
            else
            {
                <img src="~/Images/no-profile.svg" alt="Alternate Text" height="320" width="320" />
            }


        </div>
    </div>

    <a href="~/Customer/CustomerProfile/@Session["Id"]">Edit profile &nbsp</a>
    <a href="~/Customer/ChangePass/@Session["Id"]">Change Password</a>
    

</div>