@model IEnumerable<Library.Models.Book>

@{
    Layout = "~/Views/Shared/_CusLayout.cshtml";
}

<table class="table" border="1">
    
    <tr>
        <th width="10px">
            Name
        </th>

        <th width="10px">
            Details
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td width="10px">
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td width="10px">
                @Html.ActionLink("Details", "BookDetails", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Downlaod", "BookDownload", new { id = item.Id })
            </td>
        </tr>
    }

</table>

