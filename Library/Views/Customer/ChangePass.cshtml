
@{
    Layout = "~/Views/Shared/_CusLayout.cshtml";
}
@model Library.Models.User

<div class="d-flex justify-content-center mt-4">
    <div class="col-md-4 card ">

        <form action="" method="post">
            <div class="form-group">
                <label for="OldPassword">Old Password</label>
                <input type="text" class="form-control" name="Username" placeholder="Enter Username">
                <span style="color:red;">@TempData["error"]</span>
            </div>
            <div class="form-group">
                <label for="Password">New Password</label>
                <input type="password" class="form-control" name="Password" placeholder="Enter new Password">
                <span style="color:red">@Html.ValidationMessageFor(model => model.Password)</span>
                <span style="color:red;">@TempData["error"]</span>
            </div>
            
            <div class="form-group">
                <label for="ConfirmPassword">Confirm Password</label>
                <input type="password" class="form-control" name="ConfirmPassword" placeholder="Enter Confirm Password">
        
                <span style="color:red;">@TempData["error"]</span>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>

        


    </div>
</div>
